<%= game_state(@tally.game_state) %>

<p>Turns left: <%= @tally.turns_left %></p>

<p>Word so far: <%= word_so_far(@tally) %>

<%= if game_over?(@tally) do %>
  <p>
    <%= new_game_button(@conn, "New game") %>
  </p>
<% else %>
  <%= form_for @conn, hangman_path(@conn, :make_move), [as: :make_move, method: :put], fn form -> %>
    <%= text_input(form, :guess) %>
    <%= submit("Make next move") %>
  <% end %>
<% end %>
